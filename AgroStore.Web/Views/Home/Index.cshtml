@model IEnumerable<ProductDto>

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card mb-3">
                    <div class="image-container" style="max-height: 200px; overflow: hidden;">
                        <img src="@product.ImageUrl" class="card-img-top" style="width: 100%; height: auto; object-fit: cover;">
                    </div>
                    <div class="card-body" style="height: 120px;">
                        <!-- Adjust height as needed -->
                        <span class="badge bg-warning text-white">Provider Name : @product.ProviderName</span>
                        <h5 class="card-title">@product.Name</h5>
                        
                        <p class="card-text">@product.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            
                            <span class="text-danger">@string.Format("{0:c}", product.Price)</span>
                            <span class="badge bg-warning text-white">@product.CategoryName</span>
                        </div>
                        <a asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-success btn-block mt-2">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

</form>
